<h1>Post一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>内容</th>
  </tr>
<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= link_to 'Postの詳細を確認する', post_path(post.id) %></td>
    <td><%= link_to "Postを編集する", edit_post_path(post.id),data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to 'Postを削除する', post_path(post.id), method: :delete,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
<%= link_to '新しくPostを投稿する', new_post_path %>